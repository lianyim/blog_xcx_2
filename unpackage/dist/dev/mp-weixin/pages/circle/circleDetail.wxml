<view class="content"><view class="circle-outside-view"><image class="circle-img" mode="aspectFill" src="{{circle.imgUrl}}"></image><view class="circle-desc-view"><view class="title">{{circle.title}}</view><view class="trendsTotal">{{circle.trendsNum+"条动态"}}</view><view class="joinNum">{{circle.joinUserNum+"成员"}}</view></view><block wx:if="{{!isJoin}}"><view data-event-opts="{{[['tap',[['joinIn',['$0'],['circle.id']]]]]}}" class="btn-view" bindtap="__e">加入</view></block><block wx:if="{{isJoin}}"><view data-event-opts="{{[['tap',[['joinOut',['$0'],['circle.id']]]]]}}" class="btn-view" bindtap="__e">已加入</view></block></view><view class="notice">{{"公告："+circle.notice}}</view><view class="trends-outside-view"><view class="trends-top-title">讨论列表</view><block wx:for="{{trendsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="trends-view"><view class="user-view"><image src="{{item.headUrl}}" mode="aspectFill" data-event-opts="{{[['tap',[['toUser',['$0'],[[['trendsList','',index,'creator']]]]]]]}}" bindtap="__e"></image><view class="username-view"><view class="username">{{item.userName}}</view><view class="time">{{item.createDate}}</view></view><image class="more" mode="aspectFill" src="../../static/imgs/trends/more_vertical.png" data-event-opts="{{[['tap',[['share',['$event']]]]]}}" bindtap="__e"></image></view><view data-event-opts="{{[['tap',[['toTrendsDetail',['$0'],[[['trendsList','',index]]]]]]]}}" class="trends-content" bindtap="__e">{{item.content}}</view><view class="img-view"><block wx:for="{{item.pictureList}}" wx:for-item="e" wx:for-index="i" wx:key="i"><image class="trends-img" mode="aspectFill" src="{{e}}" data-event-opts="{{[['tap',[['previewImage',['$0',i],[[['trendsList','',index,'pictureList']]]]]]]}}" bindtap="__e"></image></block></view></view></block><block wx:if="{{trendsList.length==0}}"><view class="no-data-view">暂无讨论</view></block></view><view data-event-opts="{{[['tap',[['toAddTrends',['$event']]]]]}}" class="publish-discuss" bindtap="__e">#参与讨论</view></view>