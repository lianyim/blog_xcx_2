.content {
  padding-left: 10px;
  padding-right: 10px;
  background-color: #f8f8f8;
}
.swiper-view {
  width: 100%;
  margin-bottom: 30rpx;
}
.swiper-view .swiper {
  height: 220rpx;
}
.swiper-view .swiper .swiper-item {
  border-radius: 8px;
}
.swiper-view .swiper .swiper-item .image-wrapper {
  height: 100%;
}
.swiper-view .swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.circle-title {
  padding-left: 8px;
  border-left: 4px solid #0079FF;
  font-size: 14px;
  font-weight: bold;
}
.more-circle {
  float: right;
  color: #999;
  font-size: 14px;
  margin-bottom: 10px;
  margin-top: -20px;
}
.circle-scroll-view {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}
.circle-outside-view {
  width: 160%;
  margin-left: -20px;
  display: flex;
  flex-wrap: nowrap;
}
.circle-outside-view .circle-view {
  width: 100%;
  height: 120px;
  border-radius: 10px;
  float: left;
  margin-left: 16px;
  padding: 10px;
  color: #FFFFFF;
}
.circle-outside-view .circle-view .top-view {
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 30px;
  padding-left: 6px;
  padding-right: 6px;
  padding-top: 2px;
  padding-bottom: 2px;
  font-size: 12px;
  width: 56%;
  text-align: center;
}
.circle-outside-view .circle-view .title {
  font-size: 16px;
  font-weight: bold;
  margin-top: 50px;
}
.circle-outside-view .circle-view .desc {
  font-size: 12px;
  margin-top: 10px;
}
.list-title {
  margin-top: 20px;
  padding-left: 8px;
  border-left: 4px solid #0079FF;
  font-size: 14px;
  font-weight: bold;
}
.list-outside-view {
  margin-left: -14px;
}
.list-outside-view .list-view {
  width: 45%;
  float: left;
  margin-left: 14px;
  margin-top: 14px;
  background-color: #FFFFFF;
  border-radius: 10px 10px 0 0;
}
.list-outside-view .list-view image {
  width: 100%;
  height: 160px;
  border-radius: 10px 10px 0 0;
}
.list-outside-view .list-view .title {
  margin-top: 10px;
  font-size: 14px;
  padding-left: 10px;
  padding-right: 10px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.list-outside-view .list-view .user-view {
  margin-top: 12px;
  padding-left: 10px;
  padding-right: 10px;
  height: 30px;
}
.list-outside-view .list-view .user-view image {
  width: 20px;
  height: 20px;
  border-radius: 50px;
  float: left;
}
.list-outside-view .list-view .user-view .username {
  font-size: 12px;
  color: #999;
  margin-left: 6px;
  float: left;
  line-height: 23px;
  width: 78%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.no-data-view {
  font-size: 16px;
  margin-top: 30px;
  color: #999;
  text-align: center;
}

