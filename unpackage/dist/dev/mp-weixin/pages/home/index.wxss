.content {
  padding-left: 10px;
  padding-right: 10px;
  overflow-x: hidden;
}
.swiper-view {
  width: 106%;
  margin-left: -20rpx;
  margin-bottom: 30rpx;
}
.swiper-view .swiper {
  height: 420rpx;
}
.swiper-view .swiper .swiper-item .image-wrapper {
  height: 100%;
}
.swiper-view .swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.label-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.label-view .label {
  text-align: center;
  font-size: 14px;
}
.label-view image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.hot-topic {
  margin-top: 20px;
  padding-left: 8px;
  border-left: 4px solid #0079FF;
  font-size: 14px;
  font-weight: bold;
}
.topic-title {
  float: right;
  color: #999;
  font-size: 14px;
  margin-top: -20px;
}
.topic-outside-view {
  clear: both;
  height: 190px;
  margin-left: -8px;
}
.topic-outside-view .topic-view {
  width: 40%;
  height: 60px;
  margin-left: 10px;
  color: #FFFFFF;
  padding: 10px;
  border-radius: 6px;
  float: left;
  margin-top: 10px;
}
.topic-outside-view .topic-view .title {
  font-size: 14px;
  margin-top: 4px;
  margin-left: 6px;
  height: 22px;
}
.topic-outside-view .topic-view .desc {
  font-size: 12px;
  margin-top: 4px;
  margin-left: 6px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.hot-book {
  margin-top: 10px;
  padding-left: 8px;
  border-left: 4px solid #0079FF;
  font-size: 14px;
  font-weight: bold;
}
.book-title {
  float: right;
  color: #999;
  font-size: 14px;
  margin-top: -20px;
}
.book-outside-view {
  margin-top: 10px;
  border-radius: 10px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 12px;
  min-height: 164px;
  max-height: auto;
  background-color: rgba(238, 207, 160, 0.8);
  padding-top: 20px;
  overflow-y: hidden;
}
.book-outside-view .label {
  width: 80px;
  text-align: center;
  padding-left: 6px;
  padding-right: 6px;
  padding-top: 2px;
  padding-bottom: 2px;
  background-color: #FFFFFF;
  border-radius: 20px;
  font-size: 12px;
  color: #ffaa00;
  margin-left: 10px;
}
.book-outside-view .desc {
  font-size: 16px;
  letter-spacing: 2px;
  color: #ffaa00;
  font-weight: bold;
  margin-top: 10px;
  margin-left: 10px;
}
.book-outside-view .book-view {
  height: 80px;
  border-radius: 10px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
  padding-bottom: 10px;
  background-color: #FFFFFF;
  margin-top: 10px;
}
.book-outside-view .book-view image {
  width: 30%;
  height: 80px;
  border-radius: 10px;
  float: left;
}
.book-outside-view .book-view .desc-view {
  float: left;
  margin-left: 10px;
  width: 66%;
}
.book-outside-view .book-view .desc-view .book-desc {
  height: 40px;
  font-size: 14px;
  color: #333;
  margin-top: 4px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.book-outside-view .book-view .desc-view .price {
  color: #ff0000;
  font-size: 16px;
  margin-top: 10px;
}
.type-name {
  margin-top: 20px;
  height: 46rpx;
  width: 100%;
  color: #000000;
  margin-left: 2px;
  text-align: center;
  margin-left: 20px;
}
.type-item-spec {
  display: flex;
  margin-top: 10px;
  margin-left: -20px;
}
.type-item-spec .dis {
  display: block;
}
.type-item-spec .btna {
  color: #FFFFFF;
  font-weight: normal;
}
.type-item-spec .btna .type-name {
  border-bottom: 4rpx solid #0079FF;
  height: 46rpx;
  width: 100%;
  text-align: center;
  color: #000000;
  font-weight: bold;
  padding-bottom: 4px;
  margin-left: 20px;
}
.article-view {
  height: 90px;
  padding-top: 10px;
  padding-bottom: 20px;
  margin-top: 10px;
  border-bottom: 1px solid #c0c0c0;
}
.article-view .article-left {
  float: left;
  width: 70%;
}
.article-view .article-left .title {
  font-size: 14px;
  color: #000000;
  font-weight: bold;
}
.article-view .article-left .desc {
  font-size: 12px;
  color: #999;
  height: 18px;
  clear: both;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.article-view .article-left .time {
  font-size: 12px;
  color: #999;
  margin-top: 6px;
}
.article-view .article-left .topic-name {
  min-width: auto;
  max-width: 70%;
  float: left;
  height: 16px;
  line-height: 16px;
  text-align: center;
  font-size: 10px;
  padding-left: 6px;
  padding-right: 6px;
  background-color: #e9f1ff;
  border-radius: 4px;
  color: #008fd6;
  margin-top: 6px;
  margin-bottom: 6px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.article-view .article-right {
  float: right;
  width: 30%;
}
.article-view .article-right image {
  width: 80px;
  height: 90px;
  float: right;
}

