.content {
  padding-left: 10px;
  padding-right: 10px;
}
.trends-outside-view {
  border-radius: 4px 4px 0 0;
  background-color: #FFFFFF;
  padding-top: 14px;
}
.trends-outside-view .trends-view {
  padding-bottom: 20px;
}
.trends-outside-view .trends-view .user-view {
  margin-bottom: 10px;
  overflow: hidden;
}
.trends-outside-view .trends-view .user-view image {
  width: 40px;
  height: 40px;
  border-radius: 50px;
  float: left;
}
.trends-outside-view .trends-view .user-view .username-view {
  float: left;
  margin-left: 8px;
  width: 60%;
}
.trends-outside-view .trends-view .user-view .username-view .username {
  font-size: 14px;
}
.trends-outside-view .trends-view .user-view .username-view .time {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}
.trends-outside-view .trends-view .user-view .follow-view {
  width: 42px;
  border-radius: 40px;
  font-size: 12px;
  padding-left: 4px;
  padding-right: 4px;
  padding-top: 2px;
  padding-bottom: 2px;
  float: right;
  background-color: #ffaa00;
  text-align: center;
  margin-top: 9px;
  color: #FFFFFF;
  margin-right: 10px;
}
.trends-outside-view .trends-view .user-view .more {
  float: right;
  width: 20px;
  height: 20px;
  margin-top: 10px;
}
.trends-outside-view .trends-view .img-view {
  margin-left: -10px;
}
.trends-outside-view .trends-view .img-view .trends-img {
  margin-top: 10px;
  width: 46%;
  height: 200px;
  border-radius: 4px;
  margin-left: 10px;
}
.trends-outside-view .trends-view .read-num {
  font-size: 12px;
  color: #999;
  margin-top: 12px;
}
.trends-outside-view .trends-view .circle-view {
  float: right;
  min-width: auto;
  max-width: 80%;
  padding-left: 8px;
  padding-right: 8px;
  border-radius: 4px;
  background-color: #e9f1ff;
  color: #008fd6;
  margin-top: -20px;
  font-size: 14px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.trends-outside-view .trends-view .circle-view text {
  font-size: 14px;
}
.trends-outside-view .trends-view .circle-view image {
  width: 26px;
  height: 26px;
  border-radius: 50px;
  margin-left: 4px;
}
.no-data-view {
  font-size: 16px;
  margin-top: 20px;
  color: #999;
  text-align: center;
}

