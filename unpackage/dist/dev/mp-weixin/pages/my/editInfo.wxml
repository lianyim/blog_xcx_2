<view class="content"><button data-event-opts="{{[['tap',[['uploadHeadUrl',['$event']]]]]}}" class="avatar-wrapper" bindtap="__e"><image class="avatar" mode="aspectFit" src="{{headUrl}}"></image></button><view class="info-view"><view class="title">手机号：</view><input class="info-input" type="number" disabled="{{true}}" placeholder="请输入手机号" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view class="info-view"><view class="title">昵称：</view><input class="info-input" type="nickname" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['userInfo']]]]]}}" value="{{userInfo.username}}" bindinput="__e"/></view><view class="info-view"><view class="title">性别：</view><input class="info-input" disabled="{{true}}" placeholder="请选择性别" data-event-opts="{{[['tap',[['chooseSex',['$event']]]],['input',[['__set_model',['','sex','$event',[]]]]]]}}" value="{{sex}}" bindtap="__e" bindinput="__e"/></view><view class="info-view"><view class="title">邮箱：</view><input class="info-input" placeholder="请输入邮箱" data-event-opts="{{[['input',[['__set_model',['$0','email','$event',[]],['userInfo']]]]]}}" value="{{userInfo.email}}" bindinput="__e"/></view><button data-event-opts="{{[['tap',[['save',['$event']]]]]}}" class="add-btn" bindtap="__e">保存</button></view>