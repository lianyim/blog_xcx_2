.trends-outside-view {
  border-radius: 4px 4px 0 0;
  background-color: #FFFFFF;
  padding-top: 14px;
  padding-left: 10px;
  padding-right: 10px;
}
.trends-outside-view .trends-top-title {
  font-size: 14px;
  font-weight: bold;
}
.trends-outside-view .trends-view {
  margin-top: 28px;
  padding-bottom: 20px;
  border-bottom: 1px solid #c8c7cc;
}
.trends-outside-view .trends-view .user-view {
  height: 40px;
  margin-bottom: 10px;
}
.trends-outside-view .trends-view .user-view image {
  width: 40px;
  height: 40px;
  border-radius: 50px;
  float: left;
}
.trends-outside-view .trends-view .user-view .username-view {
  float: left;
  margin-left: 8px;
}
.trends-outside-view .trends-view .user-view .username-view .username {
  font-size: 14px;
}
.trends-outside-view .trends-view .user-view .username-view .time {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}
.trends-outside-view .trends-view .user-view .more {
  float: right;
  width: 20px;
  height: 20px;
  margin-top: 10px;
}
.trends-outside-view .trends-view .img-view {
  margin-left: -10px;
}
.trends-outside-view .trends-view .img-view .trends-img {
  margin-top: 10px;
  width: 160px;
  height: 200px;
  border-radius: 4px;
  margin-left: 10px;
}
.no-data-view {
  font-size: 16px;
  margin-top: 20px;
  color: #999;
  text-align: center;
}

