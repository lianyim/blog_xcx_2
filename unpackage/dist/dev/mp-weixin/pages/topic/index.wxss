  margin-top: -10px;
}
.topic-outside-view {
  height: 190px;
  margin-left: -9px;
}
.topic-outside-view .topic-view {
  width: 40%;
  height: 70px;
  margin-left: 12px;
  color: #FFFFFF;
  padding-left: 10px;
  padding-top: 10px;
  padding-bottom: 10px;
  padding-right: 6px;
  border-radius: 6px;
  float: left;
  margin-top: 10px;
}
.topic-outside-view .topic-view .title {
  font-size: 14px;
  margin-top: 6px;
  margin-left: 6px;
}
.topic-outside-view .topic-view .desc {
  font-size: 12px;
  margin-top: 4px;
