.card-view {
  height: 110px;
  border-radius: 6px;
  padding-left: 20px;
  padding-right: 10px;
  padding-top: 16px;
  padding-bottom: 16px;
  color: #FFFFFF;
  margin-top: 10px;
}
.card-view .title {
  font-size: 16px;
  margin-top: 10px;
}
.card-view .desc {
  font-size: 12px;
  margin-top: 6px;
  height: 30px;
}
.card-view .remark {
  font-size: 12px;
  margin-top: 10px;
  padding-left: 8px;
  padding-right: 8px;
  padding-top: 4px;
  padding-bottom: 4px;
  background-color: #FFFFFF;
  color: #0037a7;
  display: inline-block;
}
.card-view .num {
  background-color: rgba(0, 0, 0, 0.4);
  float: right;
  font-size: 12px;
  border-radius: 50px;
  padding-left: 8px;
  padding-right: 8px;
  padding-top: 4px;
