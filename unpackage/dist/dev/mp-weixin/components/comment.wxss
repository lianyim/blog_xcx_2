.send-comment-view .comment-input {
  background-color: #f1f1f1;
  padding: 10rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  float: left;
  width: 72%;
  margin-right: 14px;
}
.send-comment-view .send-btn {
  background-color: #0079FF;
  color: #FFFFFF;
  line-height: 60rpx;
  font-size: 28rpx;
  width: 120rpx;
}
.comment-title {
  font-size: 16px;
  font-weight: bold;
  margin-top: 16px;
}
.comment-view {
  margin-top: 16px;
  border-bottom: 1px solid #c8c7cc;
  padding-bottom: 10px;
  overflow-y: hidden;
}
.comment-view .parent-view {
  overflow: hidden;
  margin-bottom: 10px;
}
.comment-view .parent-view .like-view {
  padding-right: 10px;
}
.comment-view .child-view {
  min-height: 80px;
  margin-left: 45px;
  background-color: #ebebeb;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 10px;
  overflow: hidden;
  border-radius: 4px;
}
.comment-view .child-view .child-reply-view {
  min-height: 80px;
  background-color: #ebebeb;
  padding-right: 10px;
  padding-top: 10px;
  overflow: hidden;
  border-radius: 4px;
  float: left;
  clear: both;
}
.comment-view .head-img {
  width: 40px;
  height: 40px;
  border-radius: 50px;
  float: left;
}
.comment-view .username-view {
  float: left;
  margin-left: 6px;
  width: 76%;
}
.comment-view .username-view .username {
  font-size: 12px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.comment-view .username-view .reply-desc {
  float: left;
  margin-right: 6px;
  font-size: 13px;
  margin-top: 4px;
  max-width: 100px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}
.comment-view .username-view .trends-content {
  margin-top: 4px;
  font-size: 13px;
  float: left;
  letter-spacing: 1px;
}
.comment-view .like-view {
  float: right;
}
.comment-view .like-view .like-num {
  font-size: 10px;
  margin-left: 8px;
}
.comment-view .like-view .like-img {
  width: 20px;
  height: 20px;
  margin-top: 2px;
}
.comment-view .time {
  clear: both;
  float: left;
  margin-top: 10px;
  font-size: 12px;
  color: #999;
  margin-left: 46px;
  max-width: 60%;
}
.comment-view .apply-title {
  float: left;
  margin-left: 10px;
  margin-top: 10px;
  font-size: 12px;
}
.comment-view .comment-unfold {
  font-size: 11px;
  float: right;
  position: relative;
  top: 10px;
  right: 10px;
}

