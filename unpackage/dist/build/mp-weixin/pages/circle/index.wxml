<view class="content"><view class="swiper-view"><swiper class="swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="3000" duration="800"><block wx:for="{{carouselList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item class="swiper-item"><view class="image-wrapper"><image src="{{item.url}}" mode="aspectFill"></image></view></swiper-item></block></swiper></view><view class="circle-title">热门圈子</view><view data-event-opts="{{[['tap',[['toCircleAll',['$event']]]]]}}" class="more-circle" bindtap="__e">查看更多 ></view><scroll-view class="circle-scroll-view" scroll-x="true"><view class="circle-outside-view"><block wx:for="{{circleList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['toCircleDetail',['$0'],[[['circleList','',index,'id']]]]]]]}}" class="circle-view" style="{{'background-image:'+('url('+item.imgUrl+')')+';'}}" bindtap="__e"><block wx:if="{{item.timeDesc!=null}}"><view class="top-view">{{item.timeDesc+"有人发言"}}</view></block><view class="title">{{item.title}}</view><view class="desc">{{"已有"+item.joinUserNum+"人参与，"+item.trendsNum+"条动态"}}</view></view></block></view></scroll-view><view class="list-title">热门动态</view><view class="list-outside-view"><block wx:for="{{trendsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['toTrendsDetail',['$0'],[[['trendsList','',index,'id']]]]]]]}}" class="list-view" bindtap="__e"><image mode="aspectFill" src="{{item.pictureList[0]}}"></image><view class="title">{{item.content}}</view><view class="user-view"><image mode="aspectFill" src="{{item.headUrl}}"></image><view class="username">{{item.userName}}</view></view></view></block></view><block wx:if="{{trendsList.length==0}}"><view class="no-data-view">暂无讨论</view></block><view style="height:20px;clear:both;"></view></view>